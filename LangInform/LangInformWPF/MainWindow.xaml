<Window x:Class="LangInformGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="clr-namespace:LangInformModel;assembly=LangInformModel"
        Title="MainWindow" Height="520.093" Width="1022.824" Loaded="Window_Loaded_1">
    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type model:Language}" ItemsSource="{Binding Path=Levels}">
            <TextBlock Text="{Binding Path=Name}"/>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type model:Level}" ItemsSource="{Binding Path=Units}">
            <TextBlock Text="{Binding Path=Name}"/>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type model:Unit}" ItemsSource="{Binding Path=Lessons}">
            <TextBlock Text="{Binding Path=Name}"/>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type model:Lesson}">
            <TextBlock Text="{Binding Path=Name}"/>
        </HierarchicalDataTemplate>
        
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Close" Click="menuClose_Click"/>
                </MenuItem>
            </Menu>
            <Menu>
                <MenuItem Header="Tools">
                    <MenuItem Header="Import" />
                    <MenuItem Header="Export" />
                </MenuItem>
            </Menu>
        </StackPanel>
        <Grid Name="grdUI" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="200" MaxWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="647*"/>
                <ColumnDefinition Width="165"/>
            </Grid.ColumnDefinitions>
            <GridSplitter ResizeDirection="Columns" Grid.Column="1" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TreeView Name="treeLessons" SelectedItemChanged="treeLessons_SelectedItemChanged">
                
            </TreeView>
            
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="31*"/>
                    <RowDefinition Height="424*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <StackPanel Background="#FFE6E6E6" />
                <StackPanel>
                    <Label Name="lblMap" Content="" FontSize="16"/>
                </StackPanel>
                <Grid Grid.Row="1" Name="grdLessonUI">
                    <TabControl>
                        <TabItem Header="Scene" Name="tabScene">
                            <Border BorderBrush="#FF92D050" BorderThickness="5">
                            <Grid Name="grdScene"></Grid>
                            </Border>
                        </TabItem>
                        <TabItem Header="Vocabulary" Name="tabVocabulary">
                            <Border BorderBrush="#FFFFC000" BorderThickness="5">
                                <Grid Name="grdVocabulary">
                                </Grid>
                            </Border>
                        </TabItem>
                        <TabItem Header="Sentence Structure" Name="tabSentence">
                            <Border BorderBrush="#FF00B0F0" BorderThickness="5">
                                <Grid Name="grdSentence"></Grid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>

                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <Button Name="btnLoad" Margin="3" Content="Load Test" Click="btnLoad_Click"/>
                    <Button Content="Button" Margin="0,3" Width="65" Click="Button_Click_1"/>
                </StackPanel>
            </Grid>
            <Grid Name="controlsPanel" Grid.Column="3">
                <StackPanel>
                    <Button Content="Learn" Margin="2"/>
                    <Button Content="Practice" Margin="2"/>
                    <Button Content="Review" Margin="2"/>
                    <Button Content="Quiz" Margin="2"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
